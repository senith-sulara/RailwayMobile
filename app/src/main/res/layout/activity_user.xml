<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    android:orientation="vertical"
    tools:context=".UserD">

    <!-- Title -->

    <!-- UserD Details CardView -->

    <!-- Save Button -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="User Details"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="66dp"
        android:layout_height="67dp"
        android:layout_marginStart="170dp"
        android:background="@drawable/avat"
        app:srcCompat="@drawable/iconsuser" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/saveUserButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintVertical_bias="0.675">

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Name      :"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btnwhite"
                android:hint="name"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:text="Email       :"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btnwhite"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Tel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/telLabel"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Tel            :"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/telEditText"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btnwhite"
                android:hint="Telephone"
                android:inputType="phone"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Address  :"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btnwhite"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Gender -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/genderLabel"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Gender    :"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#0B0B0B"
                android:textSize="16sp" />
</RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/saveUserButton"
        android:layout_width="243dp"
        android:layout_height="46dp"
        android:layout_marginStart="80dp"
        android:backgroundTint="#FFC107"
        android:text="Save"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/EditUserButton"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="80dp"
        android:backgroundTint="#FF9800"
        android:text="Edit User"
        android:textColor="#FFFFFF" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_margin="10dp"
        android:background="@drawable/railway"
        android:orientation="vertical">


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/white"
            android:text="Apply for Offers"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="410dp"
        android:layout_height="57dp"
        android:background="@drawable/enterbtn"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/frame" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/msgvec" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/uservec" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/calvec" />
    </LinearLayout>
</LinearLayout>
