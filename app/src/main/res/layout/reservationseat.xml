                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="9" />

            <CheckBox
                android:id="@+id/seat10"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="10" />

            <Space
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/seat11"
