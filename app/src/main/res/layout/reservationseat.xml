    <!-- Add more LinearLayouts for each line -->
    <!-- Repeat for Line 2, Line 3, and Line 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/txtregbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookedSeatList"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalAmountTextView"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Total Gross Amount: "
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discountAmountTextView"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
